<%- include('partials/header') %>
<div class="container mt-5">
  <h2>Register</h2>
  <form action="/register" method="POST">
    <div class="mb-3">
      <label>Name</label>
      <input name="name" required class="form-control" />
    </div>
    <div class="mb-3">
      <label>Email</label>
      <input name="email" type="email" required class="form-control" />
    </div>
    <div class="mb-3">
      <label>Password</label>
      <input name="password" type="password" id="regPassword" required class="form-control" />
      <input type="checkbox" onclick="togglePassword('regPassword')" /> Show Password
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <a href="/login" class="btn btn-link">Already have an account?</a>
  </form>
</div>
<%- include('partials/footer') %>
<script>
  function togglePassword(id) {
    const input = document.getElementById(id);
    input.type = input.type === 'password' ? 'text' : 'password';
  }
</script>
